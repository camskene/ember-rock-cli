<div class="list-group songs">
  {{#if canCreateSong}}
    <div class="list-group-item form-inline">
      {{input value=title type="text" class="form-control new-song" placeholder="New Song"}}
      <button {{action "createSong"}} disabled={{isAddButtonDisabled}} class="btn btn-primary new-song-button">Add</button>
    </div>

    <div class="list-group-item">
      <div class="row">
        <div class="col col-md-6">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" {{action "setSorting" "ratingDesc"}}>
              Rating
              <span class="glyphicon glyphicon-arrow-down"></span>
            </button>
            <button type="button" class="btn btn-default" {{action "setSorting" "ratingAsc"}}>
              Rating
              <span class="glyphicon glyphicon-arrow-up"></span>
            </button>
            <button type="button" class="btn btn-default" {{action "setSorting" "titleDesc"}}>
              Title
              <span class="glyphicon glyphicon-arrow-down"></span>
            </button>
            <button type="button" class="btn btn-default " {{action "setSorting" "titleAsc"}}>
              Title
              <span class="glyphicon glyphicon-arrow-up"></span>
            </button>
          </div>
        </div>
        <div class="col col-md-6">
          {{input placeholder="Start typing" value=searchTerm class="form-control"}}
        </div>
      </div>
    </div>
  {{/if}}

  {{#each sortedSongs as |song| }}
    <div class="list-group-item song">
      {{song.title}}
      {{star-rating item=song rating=song.rating on-click=(action "updateRating") classNames="pull-right"}}
    </div>
  {{/each}}

  {{#unless canCreateSong}}
    <div class="well">
      There are no songs yet for {{bandName}}. Why don't you <a href {{action "enableSongCreation" }}>create one?</a>
    </div>
  {{/unless}}
</div>
